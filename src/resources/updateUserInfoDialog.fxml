<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" styleClass="dialog_bg" stylesheets="@../stylestheets/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateUserInfoDialogController">
   <children>
      <Button fx:id="dialogConfirmButton" disable="true" layoutX="80.0" layoutY="189.0" mnemonicParsing="false" onAction="#onClickDialogConfirmButton" prefHeight="47.0" prefWidth="100.0" styleClass="btn" stylesheets="@../stylestheets/styles.css" text="Confirm">
         <font>
            <Font name="Microsoft YaHei Light" size="16.0" />
         </font>
      </Button>
      <Button fx:id="dialogCancelButton" layoutX="220.0" layoutY="189.0" mnemonicParsing="false" onAction="#onClickDialogCancelButton" prefHeight="47.0" prefWidth="100.0" styleClass="btn" stylesheets="@../stylestheets/styles.css" text="Cancel">
         <font>
            <Font name="Microsoft YaHei Light" size="16.0" />
         </font>
      </Button>
      <TextField fx:id="updateField" layoutX="50.0" layoutY="85.0" maxWidth="-Infinity" onKeyPressed="#onKeyPressedUpdateField" prefHeight="40.0" prefWidth="300.0" promptText="Enter your Bkash number" styleClass="field" stylesheets="@../stylestheets/styles.css">
         <font>
            <Font name="Microsoft YaHei" size="15.0" />
         </font>
      </TextField>
      <Label fx:id="dialogTitle" alignment="CENTER" layoutX="25.0" layoutY="24.0" prefHeight="35.0" prefWidth="350.0" text="Nagad Purchase Payment" textFill="WHITE">
         <font>
            <Font name="Microsoft YaHei" size="25.0" />
         </font>
      </Label>
      <Label fx:id="warningMsg" layoutX="98.0" layoutY="142.0" scaleY="0.0" styleClass="warning_error_msg" stylesheets="@../stylestheets/styles.css" text="Can't update duplicate value" textFill="#000b1c">
         <font>
            <Font name="Microsoft YaHei Light" size="15.0" />
         </font>
         <padding>
            <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
